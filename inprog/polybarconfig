[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-padding = ${spacing.padding}
label-mounted = "     %free%"
label-unmounted = "     not mounted"

[module/network]
type=internal/network
interface=wlp2s0
interval=3.0
format-connected=<label-connected>
label-connected= %essid%
label-connected-padding=${spacing.padding}
format-disconnected= <label-disconnected>
label-disconnected-padding=${spacing.padding}
label-disconnected=DISCONNECTED

[module/temperature]
type = internal/temperature
thermal-zone = 2
warn-temperature = 80
ramp-0 = "    "
ramp-1 = "    "
ramp-2 = "    "
format = <ramp> <label>
format-foreground = ${colors.foreground}
format-warn = <ramp> <label-warn>
format-padding = ${spacing.padding}
format-warn-padding = ${spacing.padding}
label = %temperature%
label-warn-foreground = ${colors.highlight}
label-warn = HOT!  %temperature%

[module/volume]
type = internal/volume
