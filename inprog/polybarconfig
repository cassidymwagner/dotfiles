[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #2b303b
foreground = #c0c5ce
foreground-alt = #c0c5ce
highlight = #eeeeee
secondary = #0f0

[spacing]
padding = 4

[bar/default]
monitor = ${env:MONITOR}
width = 100%
height = 30
;offset-x = 2%
;offset-y = 10
;override-redirect = true
;wm-restack = i3
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
border-size = 10
border-color = #00000000
font-0 = FontAwesome:size=12
font-1 = source code pro:size=10:antialias=true
;font-1 = bitocra:antialias=false
modules-left = i3 xwindow
modules-center = spotify 
modules-right = battery weather network volume date 
