module-margin-right = 0
;tray-position = right
;tray-padding = ${spacing.padding}
;tray-transparent = true
;tray-background = ${colors.background}
;tray-maxsize = 14
padding-left = 0
padding-right = 0

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
format-padding = ${spacing.padding}
format-foreground = ${colors.background}
format-background = ${colors.foreground}
;format = " <label-state> <label-mode>"
;label-focused = "%index%"
label-focused = ""
;label-focused-foreground = ${colors.highlight}
label-focused-padding = 2
;label-unfocused = "%index%"
label-unfocused = ""
;label-unfocused-foreground = ${colors.background}
label-unfocused-padding = 2
;label-urgent = %index%
strip-wsnumbers = true

[module/xwindow]
type = internal/xwindow
format-padding = ${spacing.padding}
label = "    %title%"
label-maxlen = 20

[module/mpd]
type = internal/mpd
format-online-foreground = ${colors.background}
format-online-background = ${colors.foreground}
format-online-padding = ${spacing.padding}
format-online = "%{A1:playerctl play-pause:}%{A4:playerctl previous:}%{A5:playerctl next:}    <label-song>%{A}%{A}%{A}"
label-song-maxlen = 150
label-song-ellipsis = true

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify
interval = 2

[module/weather]
type = custom/script
exec = ~/.config/i3/IconicWeather.sh "73071"
interval = 1800

[module/cpu]
type = internal/cpu
interval = 2
